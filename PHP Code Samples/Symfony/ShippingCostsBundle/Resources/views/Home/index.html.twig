{% extends 'CommonBundle:Layout:template.html.twig' %}

{% block javascripts %}
  {{ parent() }}
  <script type="text/javascript" src="{{ asset('js/edit.js') }}"></script>
{% endblock %}

{% block content %}

  <fieldset>
    <legend>Search</legend>
    {{ form_start(form) }}
    <div class="form filter">
      {{ form_row(form.warehouse_name) }}
      {{ form_row(form.global_name) }}
      {{ form_row(form.shipping_product_type_id) }}
      {{ report_submit_buttons() }}
    </div>
    <div class="cf"></div>
    <div id="form_error_container">{{ form_errors(form) }}</div>
    <div id="search_error_container"></div>
    {{ form_end(form) }}
  </fieldset>

  <fieldset id="help_container">
    <legend>Help</legend>
    <p>
      The search must contain at least three (3) characters. The search may be for whole or partial words. In order to
      search for a partial name use the asterisk character (*) as a wildcard. The search is not case sensitive. You may
      search for more than one value by separating with a single space.
    </p>

    <p>
      You cannot search within words, only the entire word or partial from the start of the word.
    </p>

    <ul>The global search will be by:
      <li>Company Name</li>
      <li>Supplier Name</li>
    </ul>
  </fieldset>

  <fieldset class="form">
    <legend>Actions</legend>
    <div class="buttons options_page">
      <a href="{{ path('shipping_costs_wizard_init') }}"><button type="button" title="Create new shipping costs">Add Shipping Cost</button></a>
      <button type="button"
              title="Update listed shipping costs"
              class="toggle_collection_form"
              data-path="{{ path('shipping_costs_update') }}">Update Costs</button>
    </div>
  </fieldset>

  <div id="error_container" class="error_message"></div>
  <div id="create_container" class="hide"></div>

  <div id="report_container" class="report">
    <fieldset>
      <legend>Shipping Costs</legend>
      <div id="table_container" >
        {% include 'ShippingCostsBundle:Home:table.html.twig' %}
      </div>
    </fieldset>
  </div>

{% endblock %}
